<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".Main3Activity">

    <TextView
        android:id="@+id/txtawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan Angka Pertama"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtawal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan Angka Kedua"
        android:id="@+id/textView"
        android:layout_below="@+id/editawal"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editkedua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtoperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Operator"
        android:layout_below="@+id/editkedua"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/btnjumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_above="@+id/txthasil"
        android:layout_toStartOf="@+id/btnkurang"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/btnkurang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@+id/txtoperator"
        android:layout_toStartOf="@+id/btnkali"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/btnkali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_below="@+id/txtoperator"
        android:layout_toStartOf="@+id/btnbagi"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/btnbagi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_below="@+id/txtoperator"
        android:layout_toStartOf="@+id/txtoperator"/>

    <TextView
        android:id="@+id/txthasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil"
        android:layout_below="@+id/btnkurang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"/>

    <EditText
        android:id="@+id/edithasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txthasil"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

</android.support.constraint.ConstraintLayout>